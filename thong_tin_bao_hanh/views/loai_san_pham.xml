<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--man hien thi form view-->
        <record id="loai_san_pham_form_view" model="ir.ui.view">
            <!-- ten minh dat-->
            <field name="name">loai.san.pham.form.view</field>
            <!-- ten bang-->
            <field name="model">loai.san.pham</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ma_loai_san_pham"/>
                            <field name="ten_loai_san_pham"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--man hien thi danh sach-->
        <record id="loai_san_pham_tree_view" model="ir.ui.view">
            <field name="name">loai.san.pham.tree.view</field>
            <field name="model">loai.san.pham</field>
            <field name="arch" type="xml">
                <tree string="loai_san_pham" default_order="create_date desc" editable="bottom">
                    <field name="ma_loai_san_pham"/>
                    <field name="ten_loai_san_pham"/>
                </tree>
            </field>
        </record>

        <!--để lọc-->
        <record id="loai_san_pham_search_view" model="ir.ui.view">
            <field name="name">loai.san.pham.search.view</field>
            <field name="model">loai.san.pham</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_loai_san_pham"/>
                    <field name="ten_loai_san_pham"/>
                </search>
            </field>
        </record>

        <record id="action_loai_san_pham" model="ir.actions.act_window">
            <field name="name">Loại sản phẩm</field> <!--hiển thị title trong danh sách -->
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loai.san.pham</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('loai_san_pham_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('loai_san_pham_form_view')})]"/>
        </record>

    </data>
</odoo>