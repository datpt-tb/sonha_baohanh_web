<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--man hien thi form view-->
        <record id="quan_huyen_form_view" model="ir.ui.view">
            <!-- ten minh dat-->
            <field name="name">quan.huyen.form.view</field>
            <!-- ten bang-->
            <field name="model">quan.huyen</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="tinh_thanh_id"/>
                            <field name="ma_quan_huyen"/>
                            <field name="ten_quan_huyen"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--man hien thi danh sach-->
        <record id="quan_huyen_tree_view" model="ir.ui.view">
            <field name="name">quan.huyen.tree.view</field>
            <field name="model">quan.huyen</field>
            <field name="arch" type="xml">
                <tree string="quan_huyen" default_order="create_date desc" editable="bottom">
                    <field name="tinh_thanh_id"/>
                    <field name="ma_quan_huyen"/>
                    <field name="ten_quan_huyen"/>
                </tree>
            </field>
        </record>

        <!--để lọc-->
        <record id="quan_huyen_search_view" model="ir.ui.view">
            <field name="name">quan.huyen.search.view</field>
            <field name="model">quan.huyen</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_quan_huyen"/>
                    <field name="ten_quan_huyen"/>
                </search>
            </field>
        </record>

        <record id="action_quan_huyen" model="ir.actions.act_window">
            <field name="name">Quận huyện</field> <!--hiển thị title trong danh sách -->
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">quan.huyen</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('quan_huyen_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('quan_huyen_form_view')})]"/>
        </record>

    </data>
</odoo>