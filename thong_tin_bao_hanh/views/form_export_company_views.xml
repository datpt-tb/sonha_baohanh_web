<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="form_export_company_tree_view" model="ir.ui.view">
        <field name="name">form.export.company.tree.view</field>
        <field name="model">form.export.company</field>
        <field name="arch" type="xml">
            <tree string="Xuất kho về công ty">
                <field name="delivery_note_number"/>
                <field name="warranty_code"/>
            </tree>
        </field>
    </record>

    <record id="form_export_company_form_view" model="ir.ui.view">
            <field name="name">form.export.company.form.view</field>
            <field name="model">form.export.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="delivery_note_number"/>
                            <field name="warranty_code"/>
                        </group>
                        <group>
                            <field name="import_before_repair_id" string=" ">
                                <tree editable="bottom">
                                    <field name="warranty_code"/>
                                    <field name="product_code"/>
                                    <field name="product_name"/>
                                    <field name="warehouse" string="Mã kho xuất"/>
                                    <field name="plant"/>
                                    <field name="unit"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="action_form_export_company" model="ir.actions.act_window">
        <field name="name">Phiếu xuất kho về công ty</field>
        <field name="res_model">form.export.company</field>
        <field name="view_mode">form</field>
    </record>
</odoo>