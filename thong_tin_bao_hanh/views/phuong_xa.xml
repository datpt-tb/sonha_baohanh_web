<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--man hien thi form view-->
        <record id="phuong_xa_form_view" model="ir.ui.view">
            <!-- ten minh dat-->
            <field name="name">phuong.xa.form.view</field>
            <!-- ten bang-->
            <field name="model">phuong.xa</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="quan_huyen_id"/>
                            <field name="ma_phuong_xa"/>
                            <field name="ten_phuong_xa"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--man hien thi danh sach-->
        <record id="phuong_xa_tree_view" model="ir.ui.view">
            <field name="name">phuong.xa.tree.view</field>
            <field name="model">phuong.xa</field>
            <field name="arch" type="xml">
                <tree string="quan_huyen" default_order="create_date desc" editable="bottom">
                    <field name="quan_huyen_id"/>
                    <field name="ma_phuong_xa"/>
                    <field name="ten_phuong_xa"/>
                </tree>
            </field>
        </record>

        <!--để lọc-->
        <record id="phuong_xa_search_view" model="ir.ui.view">
            <field name="name">phuong.xa.search.view</field>
            <field name="model">phuong.xa</field>
            <field name="arch" type="xml">
                <search>
                     <field name="ma_phuong_xa"/>
                    <field name="ten_phuong_xa"/>
                </search>
            </field>
        </record>

        <record id="action_phuong_xa" model="ir.actions.act_window">
            <field name="name">Phường/xã</field> <!--hiển thị title trong danh sách -->
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">phuong.xa</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('phuong_xa_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('phuong_xa_form_view')})]"/>
        </record>

    </data>
</odoo>