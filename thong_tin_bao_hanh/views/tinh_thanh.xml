<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>
        <!--man hien thi form view-->
        <record id="tinh_thanh_form_view" model="ir.ui.view">
            <!-- ten minh dat-->
            <field name="name">tinh.thanh.form.view</field>
            <!-- ten bang-->
            <field name="model">tinh.thanh</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ma_tinh_thanh"/>
                            <field name="ten_tinh_thanh"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--man hien thi danh sach-->
        <record id="tinh_thanh_tree_view" model="ir.ui.view">
            <field name="name">tinh.thanh.tree.view</field>
            <field name="model">tinh.thanh</field>
            <field name="arch" type="xml">
                <tree string="tinh_thanh" default_order="create_date desc" editable="bottom">
                    <field name="ma_tinh_thanh"/>
                    <field name="ten_tinh_thanh"/>
                </tree>
            </field>
        </record>

        <!--để lọc-->
        <record id="tinh_thanh_search_view" model="ir.ui.view">
            <field name="name">tinh.thanh.search.view</field>
            <field name="model">tinh.thanh</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_tinh_thanh"/>
                    <field name="ten_tinh_thanh"/>
                </search>
            </field>
        </record>

        <record id="action_tinh_thanh" model="ir.actions.act_window">
            <field name="name">Tỉnh thành</field> <!--hiển thị title trong danh sách -->
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tinh.thanh</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('tinh_thanh_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('tinh_thanh_form_view')})]"/>
        </record>

    </data>
</odoo>